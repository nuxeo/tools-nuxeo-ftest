<project>

  <properties>
    <log.config>log4j.xml</log.config>
    <log.dir>${project.build.directory}</log.dir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
            <archive>
              <manifestFile>src/test/resources/META-INF/MANIFEST.MF</manifestFile>
            </archive>
            </configuration>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
